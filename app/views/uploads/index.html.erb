<p id="notice"><%= notice %></p>

<h1 class="w3-panel w3-blue w3-round">Uploaded Files</h1>

<table id="main_table" class="tablesorter w3-table-all">
  <thead>
    <tr class="w3-blue">
      <th onclick="sortTable(0)">Filename</th>
      <th>Filesize</th>
      <th>Checksum</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @uploads.each do |upload| %>
      <tr class="w3-hover-grey">
      
        <td><%= upload.filename %></td>
        <td><%= upload.file.byte_size %></td>
        <td><%= upload.file.checksum %></td>
        <td class="material-icons"><%= link_to 'file_download', rails_blob_path(upload.file, disposition: :attachment) %></td>
        <td class="material-icons"><%= link_to 'edit', edit_upload_path(upload) %></td>
        <td class="material-icons"><%= link_to 'delete_forever', upload_path, method: :destroy, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Upload New File', new_upload_path %>
